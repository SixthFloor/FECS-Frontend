<navbar></navbar>
<div class="container">
  <div ng-if="!productpageCtrl.is404">
      <div class="route">
        <a href="#/home">Home</a> >>
        <a href="#/category/all">All products</a> >>
        <a href="">{{productpageCtrl.productName}}</a>
      </div>
      <div class="row text-center">
        <hr><h1>{{productpageCtrl.productName}}</h1><hr>
      </div>
      <div class="product">
        <div class="product-left">
          <img src="http://placehold.it/400x350">
        </div>
        <div class="product-right col-md-4">
          <h2>à¸¿{{productpageCtrl.price}}</h2>
          <h6>Serial number: {{productpageCtrl.productID}}</h6>
          <label>Available {{productpageCtrl.available}}</label>
          <form class="form-inline">
            <div class="form-group">
              <label >Quantity</label>
              <input type="number" class="form-control" value="1" />
            </div>
          </form><br/>
          <button class="btn btn-primary" name="">Add to Cart</button>
        </div>
      </div>
      <div class="product-info">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab">Details</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane fade in active">
            <label><h3><span class="label label-info"><b>Description</b></span></h3></label>
            <p>{{productpageCtrl.description}}</p>
            <label><h3><span class="label label-info"><b>Size</b></span></h3></label>
            <p>{{productpageCtrl.dimensionDescription}}</p>
          </div>
        </div>
      </div>
  </div>
  <div ng-if="productpageCtrl.is404">
    <h1>Furniture Not Found</h1>
    <p>{{productpageCtrl.errorMessage}}</p>
  </div>
</div>
<footer></footer>

