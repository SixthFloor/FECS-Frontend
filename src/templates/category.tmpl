<navbar></navbar>

<div class="container" ng-init="header = categorypageCtrl.capitalize(categorypageCtrl.category_name)">
  <div class="route">
    <a href="#/home">Home</a> >>
    <a ng-if="categorypageCtrl.category_name == 'all'" href="#/category/all">
      <span>All products</span>
    </a>
    <a ng-if="categorypageCtrl.category_name != 'all'" href="#/category/{{categorypageCtrl.category_name}}">
      <span >{{header}}</span>
    </a>
  </div>

  <div class="collections text-center">
    <span ng-if="categorypageCtrl.category_name == 'all'">
      <hr/><h2>All products</h2><hr/>
    </span>
    <span ng-if="categorypageCtrl.category_name != 'all'">
      <hr/><h2>{{header}}</h2><hr/>
    </span>
  </div>

  <div class="row">
    <div class="category-filter">
      <h3>Filter By</h3>
      <div class="price">
        <h4>Price</h4>
        <input type="checkbox"> Under THB 1,000 <br/>
        <input type="checkbox"> THB 1,000 to THB 5,000 <br/>
        <input type="checkbox"> THB 5,000 to THB 10,000 <br />
        <input type="checkbox"> THB 10,000 & Above <br/>
      </div>
    </div>

    <div class="list col-md-9">
      <div class="row">
        <div class="sort">
          <h4>Sort by</h4>
          <div class="btn-group">
            <select class="form-control" ng-model="categorypageCtrl.sort_by"
            ng-change="categorypageCtrl.order()"
            required ng-options='option.value as option.name for option in categorypageCtrl.sortOptions'>
            </select>
          </div>
        </div>
      </div>
      <div class="col-md-4 text-center" ng-repeat="product in categorypageCtrl.productList | orderBy:categorypageCtrl.sort_by">
        <div class="thumbnail">
          <img src="http://placehold.it/350x300">
          <div class="caption">
            <h3>{{product.name}}</h3>
            
            <!-- easy for tester  -->
            <h5>({{product.serialNumber}})</h5>

            <p>{{product.description}}</p>
            <b>{{product.price}} TH Baht</b>
            <p><a class="btn btn-primary" ng-click="categorypageCtrl.viewProduct(product.serialNumber)" role="button">View product</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<footer></footer>
